<fieldset>
  <div class="form-group">
    <%= form.label :name, "Name", class: "col-lg-2 control-label" %>
    <div class="col-lg-4">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :env_value, "Value in $DEPLOY_GROUPS", class: "col-lg-2 control-label" %>
    <div class="col-lg-4">
      <%= form.text_field :env_value, class: "form-control" %>
    </div>
  </div>

  <% if ENV["SECRET_STORAGE_BACKEND"] == "SecretStorage::HashicorpVault" %>
    <div class="form-group">
      <%= form.label :env_value, "Vault Instance", class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= form.select(:vault_instance, options_for_select(VaultClient.available_instances), {}, class: "form-control") %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Environment", class: "col-lg-2 control-label" %>
    <div class="col-lg-4">
      <%= form.collection_select(:environment_id, environments, :id, :name, {}, { class: 'form-control' }) %>
    </div>
  </div>

  <%= Samson::Hooks.render_views(:deploy_group_form, self, form: form) %>
</fieldset>
